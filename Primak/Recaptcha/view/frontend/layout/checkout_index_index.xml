<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<body>
    <referenceBlock name="checkout.root">
        <arguments>
            <argument name="jsLayout" xsi:type="array">
                <item name="components" xsi:type="array">
                    <item name="checkout" xsi:type="array">
                        <item name="children" xsi:type="array">
                            <item name="steps" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="billing-step" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="payment" xsi:type="array">
                                                <item name="children" xsi:type="array">
                                                    <item name="afterMethods" xsi:type="array">
                                                        <item name="children" xsi:type="array">
                                                            <item name="recaptcha-checkout-form-container" xsi:type="array">
                                                                <item name="component" xsi:type="string">Primak_Recaptcha/js/view/recaptcha-checkout-form</item>
                                                                <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                <item name="config" xsi:type="array">
                                                                    <item name="template" xsi:type="string">Primak_Recaptcha/recaptcha-checkout-form</item>
                                                                </item>
                                                                <item name="children" xsi:type="array">
                                                                    <item name="recaptcha-checkout-form-fields" xsi:type="array">
                                                                        <item name="component" xsi:type="string">uiComponent</item>
                                                                        <item name="displayArea" xsi:type="string">recaptcha-checkout-form-fields</item>
                                                                        <item name="children" xsi:type="array">

                                                                            <item name="card_number" xsi:type="array">
                                                                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/abstract</item>
                                                                                <item name="config" xsi:type="array">
                                                                                    <item name="customScope" xsi:type="string">recaptchaCheckoutForm</item>
                                                                                    <item name="template" xsi:type="string">ui/form/field</item>
                                                                                    <item name="elementTmpl" xsi:type="string">ui/form/element/input</item>
                                                                                </item>
                                                                                <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                                <item name="dataScope" xsi:type="string">recaptchaCheckoutForm.card_number</item>
                                                                                <item name="label" xsi:type="string">Card Number</item>
                                                                                <item name="sortOrder" xsi:type="string">1</item>
                                                                                <item name="validation" xsi:type="array">
                                                                                    <item name="integer" xsi:type="boolean">true</item>
                                                                                    <item name="min_text_length" xsi:type="number">0</item>
                                                                                    <item name="max_text_length" xsi:type="number">11</item>
                                                                                    <item name="required-entry" xsi:type="boolean">true</item>
                                                                                </item>
                                                                            </item>
                                                                            <item name="cvv_number" xsi:type="array">
                                                                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/abstract</item>
                                                                                <item name="config" xsi:type="array">
                                                                                    <item name="customScope" xsi:type="string">recaptchaCheckoutForm</item>
                                                                                    <item name="template" xsi:type="string">ui/form/field</item>
                                                                                    <item name="elementTmpl" xsi:type="string">ui/form/element/input</item>
                                                                                </item>
                                                                                <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                                <item name="dataScope" xsi:type="string">recaptchaCheckoutForm.cvv_number</item>
                                                                                <item name="label" xsi:type="string">CVV</item>
                                                                                <item name="sortOrder" xsi:type="string">2</item>
                                                                                <item name="validation" xsi:type="array">
                                                                                    <item name="integer" xsi:type="boolean">true</item>
                                                                                    <item name="min_text_length" xsi:type="number">0</item>
                                                                                    <item name="max_text_length" xsi:type="number">3</item>
                                                                                    <item name="required-entry" xsi:type="boolean">true</item>
                                                                                </item>
                                                                            </item>
                                                                            <item name="paymentcaptcha" xsi:type="array">
                                                                                <item name="config" xsi:type="array">
                                                                                    <item name="customScope" xsi:type="string">recaptchaCheckoutForm</item>
                                                                                </item>
                                                                                <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha</item>
                                                                                <item name="displayArea" xsi:type="string">recaptcha-checkout-form-fields</item>
                                                                                <item name="configSource" xsi:type="string">checkoutConfig</item>
                                                                                <item name="reCaptchaId" xsi:type="string">recaptcha-checkout-inline-login2</item>
                                                                                <item name="validation" xsi:type="array">
                                                                                    <item name="checked" xsi:type="string">true</item>
                                                                                    <item name="required-entry" xsi:type="string">true</item>
                                                                                </item>
                                                                                <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                                <item name="dataScope" xsi:type="string">recaptchaCheckoutForm.paymentcaptcha</item>
                                                                                <item name="zone" xsi:type="string">custom_form</item>
                                                                            </item>

                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </arguments>
    </referenceBlock>
</body>
</page>
